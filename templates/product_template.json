{
    "templateName": "product",
    "version": "1.0",
    "description": "Product description page template",
    "requiredFields": [
        "productName",
        "concentration",
        "skinTypes",
        "keyIngredients",
        "benefits",
        "usage",
        "price"
    ],
    "blockDependencies": [
        "benefits_block",
        "usage_block",
        "ingredient_block"
    ],
    "agentDependencies": [
        "ParserAgent"
    ],
    "schema": {
        "productName": {
            "type": "string",
            "description": "Name of the product",
            "rules": {
                "minLength": 1,
                "maxLength": 200
            }
        },
        "concentration": {
            "type": "string",
            "description": "Active ingredient concentration"
        },
        "skinTypes": {
            "type": "array",
            "items": {
                "type": "string"
            },
            "description": "Suitable skin types"
        },
        "keyIngredients": {
            "type": "array",
            "items": {
                "type": "string"
            },
            "description": "List of key ingredients"
        },
        "benefits": {
            "type": "object",
            "sourceBlock": "benefits_block",
            "properties": {
                "items": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "primary": {
                    "type": "string"
                },
                "count": {
                    "type": "integer"
                }
            }
        },
        "usage": {
            "type": "object",
            "sourceBlock": "usage_block",
            "properties": {
                "instructions": {
                    "type": "string"
                },
                "frequency": {
                    "type": "string"
                },
                "quantity": {
                    "type": "string"
                },
                "timing": {
                    "type": "string"
                }
            }
        },
        "sideEffects": {
            "type": "string",
            "description": "Potential side effects"
        },
        "price": {
            "type": "object",
            "properties": {
                "amount": {
                    "type": "number",
                    "rules": {
                        "minimum": 0
                    }
                },
                "currency": {
                    "type": "string"
                }
            }
        }
    }
}
{
    "templateName": "comparison",
    "version": "1.0",
    "description": "Product comparison page template",
    "requiredFields": [
        "productA",
        "productB",
        "comparison"
    ],
    "blockDependencies": [
        "ingredient_block",
        "comparison_block"
    ],
    "agentDependencies": [
        "ParserAgent"
    ],
    "schema": {
        "generatedAt": {
            "type": "string",
            "format": "iso8601"
        },
        "productA": {
            "type": "object",
            "description": "First product summary",
            "properties": {
                "name": {
                    "type": "string"
                },
                "concentration": {
                    "type": "string"
                },
                "price": {
                    "type": "number"
                },
                "currency": {
                    "type": "string"
                },
                "benefits": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "ingredients": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "skinTypes": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                }
            }
        },
        "productB": {
            "type": "object",
            "description": "Second product summary (fictional)",
            "properties": {
                "name": {
                    "type": "string"
                },
                "concentration": {
                    "type": "string"
                },
                "price": {
                    "type": "number"
                },
                "currency": {
                    "type": "string"
                },
                "benefits": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "ingredients": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "skinTypes": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                }
            }
        },
        "comparison": {
            "type": "object",
            "sourceBlock": "comparison_block",
            "properties": {
                "commonIngredients": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "uniqueToA": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "uniqueToB": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "commonBenefits": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "uniqueBenefitsA": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "uniqueBenefitsB": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "priceDifference": {
                    "type": "number",
                    "rules": {
                        "minimum": 0
                    }
                },
                "cheaperProduct": {
                    "type": "string"
                },
                "recommendation": {
                    "type": "string"
                }
            }
        }
    }
}
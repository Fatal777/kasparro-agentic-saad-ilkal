{
    "templateName": "faq",
    "version": "1.0",
    "description": "FAQ page template with categorized Q&As",
    "requiredFields": [
        "productName",
        "faqs"
    ],
    "blockDependencies": [
        "benefits_block",
        "usage_block",
        "ingredient_block"
    ],
    "agentDependencies": [
        "ParserAgent",
        "QuestionAgent"
    ],
    "schema": {
        "productName": {
            "type": "string",
            "description": "Name of the product"
        },
        "generatedAt": {
            "type": "string",
            "format": "iso8601",
            "description": "Timestamp of generation"
        },
        "totalQuestions": {
            "type": "integer",
            "description": "Total number of FAQs",
            "rules": {
                "minimum": 5
            }
        },
        "faqs": {
            "type": "array",
            "minItems": 5,
            "items": {
                "id": {
                    "type": "string",
                    "pattern": "faq-[0-9]{3}"
                },
                "category": {
                    "type": "string",
                    "enum": [
                        "informational",
                        "safety",
                        "usage",
                        "purchase",
                        "comparison"
                    ]
                },
                "question": {
                    "type": "string",
                    "rules": {
                        "minLength": 5
                    }
                },
                "answer": {
                    "type": "string",
                    "rules": {
                        "minLength": 5
                    }
                }
            }
        }
    }
}